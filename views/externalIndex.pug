doctype html

include common

html(lang=en)
    head
        title WPI Collablab - Status
        script(src='/js/jquery.js')
        script(src='/js/bootstrap.js')
        link(href='/css/signin.css', rel='stylesheet')
        link(href='/css/bootstrap.css',  rel='stylesheet')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css", rel="stylesheet")
        link(href='css/collab.css', rel='stylesheet')
    body
        +default_nav_bar()
        .container
            .row.mt-5
                .col-sm-12
                    center
                        h1 CollabLab is a student run MakerSpace at WPI
            .row.mt-3
                .col-sm-12
                    .text-center
                        img(src="images/logo.jpg").img-responsive
            .row.mt-3
                .col-sm-12
                    h1.text-center
                        | The lab is currently&nbsp;
                        strong
                            span(id='isOpen')
            .row.mt-5.justify-content-center
                .card.col-8.gx-0
                    .card-header Who is in the lab?
                    .card-body.gx-0
                        ul#who.list-group.list-group-flush
        if user && user.labMonitor === true
            #kickModal.modal.fade(aria-hidden='true', tabindex='-1', role='dialog', aria-labelledby='kickingLabel')
                .modal-dialog.modal-md
                    .modal-content
                        .modal-header
                            input.d-none(type='text', id='idNumber')
                            h3 Confirm that you want to kick&nbsp;
                                span(id='kickName')
                                br
                                small Confirm that you want to kick the user.
                        .modal-body
                            button.btn.btn-lg.btn-danger.btn-block(type='submit' onClick='kickUser()') Kick

        script(src='/js/common.js')
        script(src='/js/external.js')
        script(src='/js/notify.js')