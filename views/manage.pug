include common

doctype html
html(lang='en')
    head
        title WPI Collablab - #{title}
        link(href='/css/signin.css', rel='stylesheet')
        link(href='/css/bootstrap.css',  rel='stylesheet')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css", rel="stylesheet")

        script(src='/js/jquery.js')
        script(src='/js/bootstrap.js')
    body
        +default_nav_bar(true)
        .container
            form.text-end(role='form' onsubmit="return false;")
                .row.my-3.justify-content-center.text-start
                    h2.col-auto Enter credentials to enter portal
                .row.my-3.justify-content-center
                    .col-2
                        label.col-form-label(for='idNumber') Your ID Number or Username
                    .col-4
                        input.form-control(type='text', placeholder='Swipe or Type ID Number or Username', autofocus='', id='idNumber')
                .row.my-3.justify-content-center
                    .col-2
                        label.col-form-label(for='password') Your Password
                    .col-4
                        input.form-control(type='password', placeholder='Enter Password', id='password')
                .row.my-3.justify-content-center
                    button.d-none(type='submit', onClick='login()')
                    .col-2
                        button.btn.btn-lg.btn-danger(type='submit', onClick='cancelLogin()') Cancel Login
                    .col-4.text-start
                        button.btn.btn-lg.btn-primary(type='submit', onClick='login()') Login
                        
        #passwordModal.modal.fade(aria-hidden='true', tabindex='-1', role='dialog', aria-labelledby='kickingLabel')
            .modal-dialog
                .modal-content
                    .modal-header
                        h3.modal-title Set Your Password
                    .modal-body
                        form.text-end(role='form', id='passwordForm', onsubmit='return false;')
                            #currentPasswordGroup.row.my-3
                                .col-6
                                    label.col-form-label(for='currentPassword') Your Current Password
                                .col-6
                                    input.form-control(type='password', placeholder='Password' id='currentPassword')
                            #newPasswordGroup.row.my-3
                                .col-6
                                    label.col-form-label(for='newPassword') New Password
                                .col-6
                                    input.form-control(type='password', placeholder='New Password' id='newPassword')
                            #repeatPasswordGroup.row.my-3
                                .col-6
                                    label.col-form-label(for='repeatPassword') Confirm New Password
                                .col-6
                                    input.form-control(type='password', placeholder='Confirm New Password' id='repeatPassword')
                    .modal-footer
                        button.btn.btn-lg.btn-warning.btn-block(type='submit' onClick='changePassword()') Change Your Password

        script(src='/js/notify.js')
        script(src='/js/common.js')
        script(src='/js/manage.js')
