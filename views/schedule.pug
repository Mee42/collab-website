mixin button(title, action)
    button.btn-outline-primary.btn.col-md-offset-3.col-md-6(onClick!=action)=title
doctype html

include common

html(lang='en')
    head
        title WPI Collablab - Schedule
        script(src='/js/jquery.js')
        script(src='/js/bootstrap.js')
        link(href='/css/schedule.css', rel='stylesheet')
        link(href='/css/bootstrap.css',  rel='stylesheet')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css", rel="stylesheet")

    body
        +default_nav_bar
        .container
            center
                iframe(src='https://calendar.google.com/calendar/embed?title=Scheduled%20Lab%20Hours&mode=WEEK&height=500&wkst=1&bgcolor=%23FFFFFF&src=f4bg9a2vrnb3onn2v941vl62mk%40group.calendar.google.com&color=%23333333&ctz=America%2FNew_York', style='border-width:0', width='800', height='500')
        script(src='/js/common.js')